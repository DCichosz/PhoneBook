@model PhoneBook.Models.PersonModel

<form asp-action="Add" method="post">
    
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input class="form-control d-block" style="width: 100%" asp-for="FirstName" placeholder="First Name"/>
        <span class="text-danger" asp-validation-for="FirstName"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input class="form-control d-block" style="width: 100%" asp-for="LastName" placeholder="Last Name"/>
        <span class="text-danger" asp-validation-for="LastName"></span>
    </div>

    <div class="form-group">
        <label asp-for="Phone"></label>
        <input class="form-control d-block" style="width: 100%" asp-for="Phone" placeholder="Telephone"/>
        <span class="text-danger" asp-validation-for="Phone"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input class="form-control d-block" style="width: 100%" asp-for="Email" placeholder="Email"/>
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>

    <input class="btn btn-success" type="submit" value="Add"/>

</form>

